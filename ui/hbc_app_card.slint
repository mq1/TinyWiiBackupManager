import { ElevatedCard, Vertical, Horizontal } from "@material";
import { HbcApp } from "common.slint";

export component HbcAppCard inherits VerticalLayout {
    in property <HbcApp> app;

    padding: 5px;

    ElevatedCard {
        Vertical {
            Horizontal {
                alignment: end;
                Text {
                    text: app.size;
                }
            }

            Image {
                source: app.image;
            }

            Text {
                horizontal-alignment: center;
                text: app.name;
            }
        }
    }
}
